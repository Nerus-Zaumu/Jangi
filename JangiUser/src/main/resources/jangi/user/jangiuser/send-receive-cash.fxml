<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" styleClass="background-style" stylesheets="@styles/styles.css" xmlns="http://javafx.com/javafx/18" xmlns:fx="http://javafx.com/fxml/1" fx:controller="jangi.user.jangiuser.SendMoneyController">
   <children>
      <Label layoutX="213.0" layoutY="54.0" text="Send money">
         <font>
            <Font size="25.0" />
         </font>
      </Label>
      <Label layoutX="117.0" layoutY="132.0" text="Amount">
         <font>
            <Font size="23.0" />
         </font>
      </Label>
      <Label layoutX="14.0" layoutY="200.0" text="Choose account">
         <font>
            <Font size="23.0" />
         </font>
      </Label>
      <TextField fx:id="transferAmount" layoutX="256.0" layoutY="129.0" prefHeight="36.0" prefWidth="198.0" promptText="\@amount" />
      <ComboBox fx:id="userCombo" layoutX="256.0" layoutY="197.0" prefHeight="36.0" prefWidth="198.0" promptText="\@choose" />
      <Button layoutX="241.0" layoutY="271.0" mnemonicParsing="false" onAction="#makeTransfer" prefHeight="36.0" prefWidth="80.0" text="Send" />
      <Button fx:id="moneySwitch" layoutX="212.0" layoutY="332.0" mnemonicParsing="false" onAction="#switchToDashboard" prefHeight="36.0" prefWidth="138.0" text="Go back to Home" />
